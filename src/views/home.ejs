<%- include('partials/header') %>

<section>
  <h1>Application Port Russell</h1>
  <p>Connectez-vous pour accéder au tableau de bord et aux opérations CRUD.</p>
  <p><a href="/api-docs" target="_blank">Documentation API (Swagger)</a></p>

  <% if (typeof error !== 'undefined' && error) { %>
  <p style="color: red"><%= error %></p>
  <% } %>

  <form method="post" action="/login">
    <div><input name="email" placeholder="Email" required /></div>
    <div>
      <input
        name="password"
        type="password"
        placeholder="Mot de passe"
        required
      />
    </div>
    <button>Se connecter</button>
  </form>
</section>

<%- include('partials/footer') %>
